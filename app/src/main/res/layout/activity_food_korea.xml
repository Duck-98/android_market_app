<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightgray">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로"
        android:id="@+id/back_food_screen"
        android:layout_margin="10dp"
        android:backgroundTint="@color/cocoa"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:onClick="onClick_1"
            app:srcCompat="@drawable/_2" />

        <ImageView
            android:id="@+id/imageview_2"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:onClick="onClick_2"
            app:srcCompat="@drawable/_4" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="나정식당\n#곱창전골#소곱창구이"
            android:textColor="@color/black"
            android:textSize="8pt"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="목천보리\n#보리밥 맛"
            android:textColor="@color/black"
            android:textSize="8pt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_3"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:onClick="onClick_1"
            app:srcCompat="@drawable/_8" />

        <ImageView
            android:id="@+id/imageview_4"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:onClick="onClick_2"
            app:srcCompat="@drawable/_1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="원조옥수사\n#수육맛집#칼국수"
            android:textColor="@color/black"
            android:textSize="8pt"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="홍두깨칼국수\n#칼국수#김치맛집"
            android:textColor="@color/black"
            android:textSize="8pt"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_5"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:onClick="onClick_1"
            app:srcCompat="@drawable/_12" />

        <ImageView
            android:id="@+id/imageview_6"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:onClick="onClick_2"
            app:srcCompat="@drawable/_7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="운수대통국밥\n#순대국밥#국밥"
            android:textColor="@color/black"
            android:textSize="8pt"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="평양냉면\n#평양식 냉면"
            android:textColor="@color/black"
            android:textSize="8pt"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>